<h1><%=t('.header')%></h1>

<p> <%= link_to t('.new_test'), new_admin_test_path %></p>

  <table>
    <tr>
      <th><%= t('.table.title') %></th>
      <th><%= t('.table.level') %></th>
      <th><%= t('.table.questions') %></th>
      <th colspan="4"><%= t('.table.actions') %></th>
    </tr>

    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.level %></td>
        <td><%= test.questions.count %></td>
        <td><%= link_to t('actions.show'), admin_test_path(test) %></td>
        <td><%= link_to t('actions.edit'), edit_admin_test_path(test) %></td>
        <td>
          <%= link_to t('actions.delete'), admin_test_path(test),
                      method: :delete,
                      data: { confirm: t('actions.delete_confirmation') } %>
    <% end %>

  </table>
</table>

